                    </svg>
                    <!-- end::Svg Icon -->
                    </span>
                    <a href="#" class="font-weight-boldest text-primary ml-2">
                    {{ intervention.commentaires|length }} Commentaires
                    </a>
                </div>
                </div>
                <a href={{ path('InfosInterventionClient',{'id':intervention.id}) }}
                class="btn btn-primary btn-sm text-uppercase font-weight-bolder mt-5 mt-sm-0 mr-auto mr-sm-0 ml-sm-auto">
                details
                </a>
            </div>
            <!-- end::Footer -->
            </div>
            <!-- end::Card -->
        </div>
    {% endfor %}
{% endif %}
