{% extends 'ClientsBase.html.twig'%}

{% block Entete %}{% endblock %}

{% block Contenu %}

	<div class=" container ">
		<div
			class="col-xl-12 col-xxl-7">
			<!--begin::Form Wizard Form-->
			{{ form_start(form, {'attr':{'class':'form fv-plugins-bootstrap fv-plugins-framework'}})}}

			<!--begin::Form Wizard Step 1-->
			<div class="pb-5" data-wizard-type="step-content" data-wizard-state="current">

				<div class="row">
					<div class="col-xl-12">

						<div class="form-group row fv-plugins-icon-container">
							<label class="col-xl-3 col-lg-3 col-form-label">Votre Commentaire:
							</label>
							<div class="col-lg-9 col-xl-9">
								{{ form_widget(form.Contenu, {'attr':{'class':'form-control form-control-lg form-control-solid'}})}}

								<div class="fv-plugins-message-container"></div>
							</div>
						</div>

						<div class="form-group row fv-plugins-icon-container">
							<label class="col-xl-3 col-lg-3 col-form-label"></label>
							<div class="col-lg-9 col-xl-9">
								{{ form_widget(form.DateEnvoi, {'attr':{'class':'form-control form-control-lg form-control-solid'}})}}

								<div class="fv-plugins-message-container"></div>
							</div>
						</div>


					</div>
				</div>
				<!--end::Form Wizard Step 1-->


				<!--begin::Wizard Actions-->
				<div class="d-flex justify-content-between border-top pt-10">
					<div class="mr-2"></div>
					<div>
						{{ form_widget(form.VALIDER,{'attr':{'class': 'btn btn-success font-weight-bold text-uppercase px-9 py-4'}}
						) }}


					</div>
				</div>
				<!--end::Wizard Actions-->
				<div></div>
				<div></div>
				<div></div>
				{{ form_end(form)}}
				<!--end::Form Wizard Form-->
			</div>

		</div>
	{% endblock %}


	{% block Scripts %}
		{% include('clients_dashboard/Components/Scripts.html.twig') %}
		<script src="{{asset('Clients/Assets/js/pages/custom/contacts/add-contact.js')}}"></script>

	{% endblock %}
