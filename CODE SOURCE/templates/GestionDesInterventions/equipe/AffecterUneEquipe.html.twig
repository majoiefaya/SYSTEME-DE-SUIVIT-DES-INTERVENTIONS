{% extends 'AdminsBase.html.twig' %}

{% block Contenu %}
<div class="card card-custom">
    <div class="card-header">
    <h3 class="card-title">
        Selectionnez L'Equipe a Affecter
    </h3>
    </div>
    <!--begin::Form-->
       {% if error is defined %}
        <div class="alert alert-custom alert-light-danger fade show py-4" role="alert">
            <div class="alert-icon"><i class="flaticon-warning"></i></div>
            <div class="alert-text font-weight-bold">
            {{ error }}
            </div>
            <div class="alert-close">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true"><i class="la la-close "></i></span>
                </button>
            </div>
        </div>
      {% endif %}
    <form class="form" action="{{path('AffecterEquipe',{'id':intervention.id })}}" method="post">
    <div class="card-body">
        <div class="form-group row">
        <label class="col-form-label text-right col-lg-3 col-sm-12">Equipes</label>
        <div class=" col-lg-4 col-md-9 col-sm-12">
            <select class="form-control select2" id="kt_select2_1" name="param">
            {% for equipe in equipes %}     
                <option value="{{equipe.NomEquipe}}">{{equipe.NomEquipe}}</option>
            {% endfor %}
            </select>
        </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
        <div class="col-lg-9 ml-lg-auto">
            <button type="submit" class="btn btn-primary mr-2">Enregistrer</button>
            <a href="{{path('InfosInterventionAdmin',{'id':intervention.id})}}" type="reset" class="btn btn-secondary">Annuler</a>
        </div>
        </div>
    </div>
    </form>
    <!--end::Form-->
</div>
{% endblock %}


{% block Scripts %}
  {% include('admins_dashboard/Components/Scripts.html.twig') %}
  <script src="{{asset('Admins/Assets/js/pages/crud/forms/widgets/select2.js')}}"></script>
{% endblock %}
