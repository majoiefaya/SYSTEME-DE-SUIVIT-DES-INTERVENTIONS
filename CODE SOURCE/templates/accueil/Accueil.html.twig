          </li>
          <li class="nav-item">
            <a class="nav-link" href="#features-section">Guide</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#digital-marketing-section">Services</a>  
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#feedback-section">{% trans %}Testimonials{% endtrans %}</a>
          </li>
          <li class="nav-item">
            {% for locale in locales %}
              {% if locale != app.request.locale %}
                  <a href="{{path('ChangerLangue',{'locale':locale})}}" class="nav-link" data-offset="0px,0px" aria-expanded="false">
                      <span class="symbol symbol-20 mr-3">
                        <img src="/Admins/assets/media/svg/flags/{{ locale }}.svg" alt="{{ locale }}" style="height:18px">
                      </span>
                      <span class="navi-text">{{ locale }}</span>
