            <thead>
              <tr class="text-uppercase">
                <th style="min-width: 250px" class="pl-7">
                  <span class="text-dark-75">Libellé</span>
                </th>
                <th style="min-width: 100px">
                  Categorie
                </th>
                <th style="min-width: 100px">
                  Disponibilite
                </th>
                <th style="min-width: 150px">
                  Utilisation
                </th>
                <th style="min-width: 130px">
                  Quantite
                </th>
                <th style="min-width: 120px">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody>
              {% for equipement in equipements %}
                <tr>
                  <td class="pl-0 py-8">
                    <div class="d-flex align-items-center">
                      <div class="symbol symbol-50 flex-shrink-0 mr-4">
                        <div class="symbol-label"
                          style="background-image: url('{{
                          asset('Interventions/Equipements/Images/')
                            ~ equipement.Image
                          }}')"></div>
                      </div>

                      <div>
                        <a href="#"
                          class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">
                          {{ equipement.Libelle }}
                        </a>
                        <span class="text-muted font-weight-bold d-block">

                        </span>
                      </div>
                    </div>
                  </td>
                  <td>
                    <span class="text-dark-75 font-weight-bolder d-block font-size-lg">
                      {{ equipement.typeEquipement }}
                    </span>
                    <span class="text-muted font-weight-bold">
                      Type D'Equipement
                    </span>
                  </td>
                  <td>
                    <span class="text-dark-75 font-weight-bolder d-block font-size-lg">
                      {{ equipement.Disponibilite }}
                    </span>
                    <span class="text-muted font-weight-bold">
                      disponibilité
                    </span>
                  </td>
                  <td>
                    <span class="text-dark-75 font-weight-bolder d-block font-size-lg">
                      {{ equipement.NombreUtilisation }}
                    </span>
                    <span class="text-muted font-weight-bold">
                      Utilisé {{ equipement.NombreUtilisation }} Fois
                    </span>
                  </td>
                  <td>
                    <span class="text-dark-75 font-weight-bolder d-block font-size-lg">
                      {{ equipement.QuantiteEquipement }}
                    </span>
                    <span class="text-muted font-weight-bold">
                      {{ equipement.QuantiteEquipement }} Disponibles
                    </span>
                  </td>
                  <td class="text-right pr-0">
                    <a href="{{
                      path(
                        'ModifierEquipement',
                        {
                          id: equipement.id
                        }
                      )
                      }}"
                      class="btn btn-icon btn-light btn-hover-primary btn-sm mx-3">
                      <span class="svg-icon svg-icon-md">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
